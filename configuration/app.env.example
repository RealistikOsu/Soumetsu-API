# CORS configuration (comma-separated list of allowed origins, leave empty to disable)
# Example: SOUMETSUAPI_CORS_ALLOWED_ORIGINS=https://example.com,https://app.example.com
SOUMETSUAPI_CORS_ALLOWED_ORIGINS=

# Session configuration
SOUMETSUAPI_SESSION_TTL_SECONDS=2592000
SOUMETSUAPI_SESSION_SLIDING_WINDOW=true

# hCaptcha (bot protection)
SOUMETSUAPI_HCAPTCHA_SECRET_KEY=
SOUMETSUAPI_HCAPTCHA_ENABLED=true

# File storage paths (inside container)
SOUMETSUAPI_STORAGE_PATH=/data
SOUMETSUAPI_MAX_AVATAR_SIZE=2097152
SOUMETSUAPI_MAX_BANNER_SIZE=5242880

# Rate limiting
SOUMETSUAPI_RATE_LIMIT_ENABLED=true
